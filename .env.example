# Application
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3001
PORT=3001

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:4000/api
API_TIMEOUT=30000

# Authentication
NEXT_PUBLIC_SESSION_TIMEOUT=3600000

# Payment Gateways (Public keys only - secrets managed by backend)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx

NEXT_PUBLIC_FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-xxxxx

NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY=pk_test_xxxxx

# Email Service (Managed by backend)
# Backend handles email sending via SendGrid
EMAIL_FROM=noreply@binectics.com
SUPPORT_EMAIL=support@binectics.com

# File Storage (Managed by backend)
# Backend handles file uploads to AWS S3

# External Services
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=xxxxx
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-xxxxx

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_COOKIE_CONSENT=true
NEXT_PUBLIC_MAINTENANCE_MODE=false

# Social Auth (Managed by backend)
# OAuth flow handled by backend API

# Rate Limiting (Managed by backend)
# API rate limits enforced by backend

# Logging & Monitoring
NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
LOG_LEVEL=info
